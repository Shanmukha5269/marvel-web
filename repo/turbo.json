{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build","^db:generate"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {},
    "check-types": {},
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "GOOGLE_ID",
    "GOOGLE_SECRET",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET",
    "NEXT_REVALIDATE_SECRET",
    "CLDNRY_API_KEY",
    "CLDNRY_API_SECRET",
    "CLDNRY_CLOUD_NAME",
    "SIB_API_KEY",
    "GITHUB_PAT"
  ]
}
